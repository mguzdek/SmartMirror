<UserControl
    x:Class="ABB.MagicMirror.GuiComponents.TemperatureAndHumidityComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ABB.MagicMirror.GuiComponents"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="100"
    d:DesignWidth="200">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="30" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock Foreground="White" Grid.Row="0" Grid.Column="0" TextAlignment="Center">Temperature</TextBlock>
        <TextBlock Foreground="White" Grid.Row="0" Grid.Column="2" TextAlignment="Center">Humidity</TextBlock>
        <TextBlock Foreground="White" Grid.Row="1" Grid.Column="0" Name="TemperatureValue" TextAlignment="Center" FontSize="36">-</TextBlock>
        <TextBlock Foreground="White" Grid.Row="1" Grid.Column="2" Name="HumidiyValue" TextAlignment="Center" FontSize="36">-</TextBlock>
    </Grid>
</UserControl>
