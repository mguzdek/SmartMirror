<Page
    x:Class="ABB.MagicMirror.MainPage"
    xmlns:local="using:ABB.MagicMirror.Controls" 
    xmlns:components ="using:ABB.MagicMirror.GuiComponents"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Height="1280" Width="1023">

    <Grid Background="Black">
        
        <Grid Margin="30,40,165,555">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>                
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>                
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="30" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Foreground="White" Grid.Row="0" Grid.Column="0" TextAlignment="Center">Temperature</TextBlock>
            <TextBlock Foreground="White" Grid.Row="0" Grid.Column="2" TextAlignment="Center">Humidity</TextBlock>
            <TextBlock Foreground="White" Grid.Row="1" Grid.Column="0" Name="TemperatureValue" TextAlignment="Center" FontSize="36">-</TextBlock>
            <TextBlock Foreground="White" Grid.Row="1" Grid.Column="2" Name="HumidiyValue" TextAlignment="Center" FontSize="36">-</TextBlock>
        </Grid>

        <components:MotionSensorComponent  Margin="30,130,0,0"/>
        
        <TextBlock x:Name="textBlock" Foreground="White" HorizontalAlignment="Left" Margin="30,250,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="85" Text="Distance:" />
        <TextBlock x:Name="distanceTbx" Foreground="White" HorizontalAlignment="Left" Margin="100,250,0,0" TextWrapping="Wrap" Text="-" VerticalAlignment="Top" Width="100"/>

        <TextBlock x:Name="ipAddressLbl" Foreground="White" HorizontalAlignment="Right" Margin="0,40,275,0" TextWrapping="Wrap" Text="IP:" VerticalAlignment="Top" Width="85"/>
        <TextBlock x:Name="ipAddressTbx" HorizontalAlignment="Right" Margin="0,40,0,0" TextWrapping="Wrap" Text="-" VerticalAlignment="Top" Width="275" Foreground="#FFF50000"/>
    </Grid>
</Page>